<h1><%= t('view.content_list_screen') %></h1>

<p><%= notice %></p>

<%= form_with(method: :get, url: tasks_path, local: true) do |f| %>
  <%= f.label :title, t('view.title_search') %>
  <%= f.text_field :title %>

  <%= f.label :status, t('view.status') %>
  <%= f.select :status, ['', t('view.not_started_yet'), t('view.embarking'), t('view.done'),]%>

  <%= f.hidden_field :search, value: 'true' %>
  <%= f.submit t('view.search') %>
<% end %>

<%= link_to t('view.post'), new_task_path %>
<%= link_to t('view.limit_sort'), tasks_path(sort_expired: "true") %>
<%= link_to t('view.priority_sort'), tasks_path(sort_priority: "true") %>

<table>
  <tr>
    <th><%= t('view.title') %></th>
    <th><%= t('view.content') %></th>
    <th><%= t('view.limit') %></th>
    <th><%= t('view.status') %></th>
    <th><%= t('view.priority') %></th>
  </tr>

<div>
<% @task.each do |task| %>
  <tr>
    <td class="task_list"><%= task.title %></td>
    <td><%= task.content %></td>
    <td class="task_limit"><%= task.limit %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>

    <td><%= link_to t('view.detailed_confirmation'), task_path(task.id) %></td>
    <td><%= link_to t('view.edit'), edit_task_path(task.id) %></td>
    <td><%= link_to t('view.delete'), task_path(task.id), method: :delete ,data: { confirm: t('view.confirmation_of_deletion') } %></td>
  </tr>
</div>
<% end %>
</table>
